<div id="carousel" class="carousel slide carousel-fade carousel-dark" data-interval="false" data-mdb-ride="carousel">
  <button id="close-fullscreen" style="display: none;" class="btn btn-floating btn-link" onclick="closeFullCarousel()"><i class="fas fa-times"></i></button>
  <div class="carousel-indicators">
    <% greet.pics.forEach((pic, p)=> { %>
    <button data-mdb-target="#carousel" data-mdb-slide-to="<%= p %>" <% if (p === 0) { %> class="active" aria-current="true" <% } %> aria-label="Slide <%= p+1 %>"></button>
    <% }) %>
  </div>

  <div class="carousel-inner">

    <% greet.pics.forEach((pic, p)=> { %>
    <div class="<%= p === 0 ? 'carousel-item active' : 'carousel-item' %>" onclick="openFullCarousel()">
      <img src="/greets/<%= pic %> " class="d-block w-100" alt="greetkÃ©p">
    </div>
    <% }) %>

  </div>

  <button class="carousel-control-prev" type="button" data-mdb-target="#carousel" data-mdb-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-mdb-target="#carousel" data-mdb-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
