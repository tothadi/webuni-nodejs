<div class="modal fade" id="modify-<%= comment.cid %>" tabindex="-1" aria-labelledby="modify-<%= comment.cid %>-label"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modify-<%= comment.cid %>-label">
                    Komment módosítása
                </h5>
            </div>
            <div class="modal-body">
                <form action="/comment/<%= comment.gid %>/<%= comment.cid %>" method="POST" class="new-greet">
                    <input type="hidden" name="redirectTo" value="<%= redirectTo %>">
                    <input type="hidden" name="collapse" value="comments-<%= comment.gid %>">
                    <input type="hidden" name="scroll" class="scroll" value="<%= comment.cid %>">
                    <div class="edit-greet-text form-outline mb-4">
                        <i class="fas fa-edit trailing"></i>
                        <textarea type="text" required autocomplete="on" class="form-control active" name="text"
                            id="<%= comment.cid %>-text"><%= comment.text %></textarea>
                        <label for="<%= comment.cid %>-text" class="form-label">Komment szövege</label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mb-4 edit-save-greet">Módosítások mentése</button>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                    Mégse
                </button>
            </div>
        </div>
    </div>
</div>