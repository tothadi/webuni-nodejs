<form action="/greet/new" method="POST" enctype="multipart/form-data" class="new-greet">
  <input type="hidden" name="redirectTo" value="<%= redirectTo %>">

  <div id="new-greet-text" class="form-outline mb-4">
    <i class="fas fa-edit trailing"></i>
    <textarea type="text" required autocomplete="on" class="form-control" name="text" id="new-text" data-mdb-toggle="collapse" data-mdb-target="#new-greet-controls" aria-expanded="false" aria-controls="new-greet-controls" placeholder="Írd ide a greet szövegét!"></textarea>
    <label for="new-text" class="form-label">Új greet...</label>
  </div>

  <div class="collapse" id="new-greet-controls">
    <div class="form-check form-switch mb-4">
      <input class="form-check-input" id="new-visibility" type="checkbox" name="visibility"/>
      <label class="form-check-label" for="new-visibility">Szeretném, ha publikus lenne</label>
    </div>
    <div id="new-add-pics" class="form-outline mb-2">
      <label class="form-label btn btn-secondary" for="new-picture-input">Képek hozzáadása</label>
      <input type="file" name="greet" id="new-picture-input" multiple hidden onchange="addPics(event, 'new')">
    </div>

    <div id="new-thumbs">
      
    </div>

    <div class="d-flex justify-content-center">
      <button id="new-save-greet" type="submit" class="btn btn-primary mb-4">Greet</button>
    </div>
  </div>

</form>