<% if (typeof user === 'undefined') { %>
<ul class="navbar-nav">
  <li class="nav-item">
    <a class="nav-link" data-mdb-toggle="modal" id="toggleSignIn" data-mdb-target="#signinModal">Bejelentkezés</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-mdb-toggle="modal" id="toggleSignUp" data-mdb-target="#signupModal">Regisztráció</a>
  </li>
</ul>
<% } else { %>

<% if (typeof user.role === 'user') { %>
<p class="nav-link" id="greeting">
  Üdv újra itt, <strong> <%= user.firstname %></strong>!
</p>
<% } %>

<!-- Notifications -->
<div class="nav-link" id="notifications">
  <button type="submit" class="btn btn-primary btn-floating mx-1" id="navbarDropdownMenuLink" data-mdb-toggle="dropdown">
    <i class="fas fa-bell"></i>
    
  </button>
  <span class="badge rounded-pill badge-notification bg-danger">1</span>
  <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
    <li>
      <a class="dropdown-item" href="#">Some news</a>
    </li>
  </ul>
</div>

<a class="nav-link" href="/profile/<%= user.uid %> ">
  <img src="<%= typeof user.avatar !== 'undefined' ? `/profile/avatar/${'myphoto.jpg'}` : '/placeholder.svg' %>" alt="profilkép" class="rounded-circle" height="36" loading="lazy">
</a>


<form class="nav-link" action="/sign-out" method="GET">
  <button type="submit" class="btn btn-primary btn-floating mx-1">
    <i class="fas fa-sign-out-alt"></i>
  </button>
</form>

<% } %>