<% if (typeof user === 'undefined') { %>
<li class="nav-item">
  <a class="nav-link" data-mdb-toggle="modal" id="toggleSignIn" data-mdb-target="#signinModal">Bejelentkezés</a>
</li>
<li class="nav-item">
  <a class="nav-link" data-mdb-toggle="modal" data-mdb-target="#signupModal">Regisztráció</a>
</li>
<% } else { %>

<li class="nav-item">
  <p>
    Üdv újra itt, <strong> <%= user.fullname %></strong>!
  </p>
</li>
<li class="nav-item">
  <a class="nav-link" href="/profile/<%= user.uid %> ">
      <img src="<%= typeof user.avatar !== 'undefined' ? `/profile/${user.avatar}` : '/placeholder.svg' %>" alt="profilkép">
  </a>
</li>
<li class="nav-item">
  <form action="/sign-out" method="GET">
    <button class="nav-link btn form-control" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
      </svg></button>
  </form>
</li>
<% } %>