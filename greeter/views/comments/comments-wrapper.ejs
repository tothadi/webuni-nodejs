<div class="collapse comments-wrapper card-body" id="comments-<%= greet.gid %>">


    <% if (typeof userIn !=='undefined') { %>
    <form action="/comment/<%= greet.gid %>/new" method="POST" class="new-comment" id="<%= greet.gid %>-new">
        <input type="hidden" name="redirectTo" value="<%= redirectTo %>" />
        <input type="hidden" name="collapse" value="comments-<%= greet.gid %>">
        <input type="hidden" name="scroll" class="scroll" value="<%= greet.gid %>-new">
        <div class="edit-greet-text form-outline mb-4">
            <i class="fas fa-edit trailing"></i>
            <textarea type="text" required autocomplete="on" class="form-control active" name="text"
                id="<%= greet.gid %>-comment-text"></textarea>
            <label for="<%= greet.gid %>-comment-text" class="form-label">Komment szövege</label>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary mb-4 edit-save-greet">
                Hozzászólás elküldése
            </button>
        </div>
    </form>
    <% } %>

    <h5 id="<%= greet.gid %>-comments-title">Eddigi Hozzászólások</h5>

    <% if (!greet.comments.length) { %>
    <p>Még nem érkezett hozzászólás</p>
    <% } %>

    <% greet.comments.forEach(comment => { %>
    <%-	include('comment', { comment }) %>
    <% }) %>

    <% if (typeof scrollToElem !== 'undefined' && scrollToElem === (greet.gid + '-comments-title')) { %>
    <%- include('../feedback-box') %>
    <% } %>



</div>